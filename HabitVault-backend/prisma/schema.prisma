generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
    provider = "mysql"
    url      = "mysql://root:admin@localhost:3306/mydb"
}

model User {
    id       Int     @id @default(autoincrement())
    username String
    password String
    habits   Habit[]
}

model Habit {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    User        User?  @relation(fields: [userId], references: [id])
    userId      Int?
}
